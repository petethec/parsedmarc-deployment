# parsedmarc Environment Configuration
# Copy this file to .env and modify according to your needs

# Elasticsearch Configuration
ELASTICSEARCH_HOSTS=elasticsearch:9200
ELASTICSEARCH_SSL=false
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_API_KEY=

# OpenSearch Configuration
OPENSEARCH_HOSTS=opensearch:9200
OPENSEARCH_SSL=false
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin123
OPENSEARCH_API_KEY=

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin

# Redis Configuration
REDIS_PASSWORD=

# parsedmarc Configuration
PARSEDMARC_CONFIG_FILE=/app/config/parsedmarc.ini
PARSEDMARC_LOG_LEVEL=INFO

# Email Configuration (IMAP)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_SSL=true
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password

# Email Configuration (Microsoft Graph)
GRAPH_AUTH_METHOD=UsernamePassword
GRAPH_USER=your-email@company.com
GRAPH_PASSWORD=your-password
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret
GRAPH_TENANT_ID=your-tenant-id

# Email Configuration (Gmail API)
GMAIL_CREDENTIALS_FILE=/app/config/gmail-credentials.json
GMAIL_TOKEN_FILE=/app/config/gmail-token.json

# Splunk Configuration
SPLUNK_HEC_URL=https://your-splunk-instance:8088/services/collector
SPLUNK_HEC_TOKEN=your-hec-token
SPLUNK_HEC_INDEX=email

# Kafka Configuration
KAFKA_HOSTS=kafka:9092
KAFKA_SSL=false
KAFKA_USERNAME=
KAFKA_PASSWORD=
KAFKA_AGGREGATE_TOPIC=dmarc_aggregate
KAFKA_FORENSIC_TOPIC=dmarc_forensic
KAFKA_SMTP_TLS_TOPIC=smtp_tls

# S3 Configuration
S3_BUCKET=your-dmarc-bucket
S3_PATH=parsedmarc
S3_REGION_NAME=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT_URL=

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SSL=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=dmarc-reports@yourdomain.com
SMTP_TO=admin@yourdomain.com

# Syslog Configuration
SYSLOG_SERVER=your-syslog-server
SYSLOG_PORT=514

# GELF Configuration
GELF_HOST=your-graylog-server
GELF_PORT=12201
GELF_MODE=UDP

# Webhook Configuration
WEBHOOK_AGGREGATE_URL=https://your-webhook.com/aggregate
WEBHOOK_FORENSIC_URL=https://your-webhook.com/forensic
WEBHOOK_SMTP_TLS_URL=https://your-webhook.com/smtp-tls
WEBHOOK_TIMEOUT=60

# Log Analytics Configuration (Azure)
LA_CLIENT_ID=your-client-id
LA_CLIENT_SECRET=your-client-secret
LA_TENANT_ID=your-tenant-id
LA_DCE=your-data-collection-endpoint
LA_DCR_IMMUTABLE_ID=your-dcr-immutable-id
LA_DCR_AGGREGATE_STREAM=your-aggregate-stream
LA_DCR_FORENSIC_STREAM=your-forensic-stream
LA_DCR_SMTP_TLS_STREAM=your-smtp-tls-stream

